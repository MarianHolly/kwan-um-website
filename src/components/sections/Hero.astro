---
// Hero Section - Full viewport height
---

<section id="hero" class="hero-section">
  <!-- Background Elements -->
  <div class="hero-background">
    <div class="enso-circle" data-parallax="0.3"></div>
    <div class="texture-overlay"></div>
  </div>

  <!-- Content -->
  <div class="hero-content">
    <div class="max-w-5xl mx-auto">
      <!-- Main Heading -->
      <h1 class="hero-heading animate-on-scroll text-reveal">
        Objavte <span class="highlight">pokoj</span><br />
        vo vnútornej tichosti
      </h1>

      <!-- Subheading -->
      <p class="hero-subheading animate-on-scroll fade-in-up stagger-1">
        Pravidelná meditačná prax v tradícii Kwan Um School of Zen.<br />
        Bez predchádzajúcej zkúsenosti.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-cta-group animate-on-scroll fade-in-up stagger-2">
        <a href="#practice-info" class="cta-primary">
          <span>Začať cvičiť</span>
          <svg class="cta-icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </a>
        <a href="#what-is-zen" class="cta-secondary">
          Zistiť viac
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="hero-trust animate-on-scroll fade-in-up stagger-3">
        <div class="trust-item">
          <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M23 21v-2a4 4 0 00-3-3.87"/>
            <path d="M16 3.13a4 4 0 010 7.75"/>
          </svg>
          <span>Otvorená komunita</span>
        </div>
        <div class="trust-item">
          <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          <span>Certifikovaní učitelia</span>
        </div>
        <div class="trust-item">
          <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          <span>Medzinárodná tradícia</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 1.5rem;
    overflow: hidden;
  }

  /* Background Elements */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .enso-circle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 70vmin;
    height: 70vmin;
    border-radius: 50%;
    border: 1px solid #e7e5e4;
    opacity: 0.3;
    transition: transform 0.1s ease-out;
    will-change: transform;
    animation: breathe 8s ease-in-out infinite;
  }

  @keyframes breathe {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.05);
      opacity: 0.4;
    }
  }

  .texture-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, transparent 0%, #fafaf9 100%);
    opacity: 0.5;
  }

  /* Content */
  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 85rem;
  }

  @media (min-width: 1440px) {
    .hero-content {
      width: auto;
    }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-2) var(--spacing-5);
    background: white;
    border: 1px solid var(--color-stone-200);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-tertiary);
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
    margin-bottom: var(--spacing-8);
    box-shadow: var(--shadow-sm);
  }

  .hero-heading {
    font-family: var(--font-family-display);
    font-size: clamp(2.5rem, 7vw, 5.5rem);
    font-weight: var(--font-weight-light);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-normal);
    margin-bottom: var(--spacing-8);
  }

  .hero-heading .highlight {
    font-weight: var(--font-weight-bold);
    font-style: italic;
  }

  .hero-subheading {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    font-weight: var(--font-weight-light);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 48rem;
    margin: 0 auto var(--spacing-12);
  }

  /* CTA Buttons */
  .hero-cta-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    align-items: center;
    margin-bottom: var(--spacing-16);
  }

  @media (min-width: 640px) {
    .hero-cta-group {
      flex-direction: row;
      justify-content: center;
      gap: var(--spacing-6);
    }
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: 1.125rem 2.5rem;
    background: var(--color-primary);
    color: white;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--shadow-md);
    letter-spacing: var(--letter-spacing-normal);
    position: relative;
    overflow: hidden;
  }

  .cta-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .cta-primary:hover::before {
    left: 100%;
  }

  .cta-primary:hover {
    background: var(--color-primary-light);
    transform: translateY(-3px);
    box-shadow: var(--shadow-xl);
  }

  .cta-primary:active {
    transform: translateY(-1px) scale(0.98);
    box-shadow: var(--shadow-md);
  }

  .cta-icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform var(--transition-base);
  }

  .cta-primary:hover .cta-icon {
    transform: translateX(4px);
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    padding: 1.125rem 2.5rem;
    background: white;
    color: var(--color-text-primary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    letter-spacing: var(--letter-spacing-normal);
    position: relative;
  }

  .cta-secondary:hover {
    background: var(--color-background-alt);
    border-color: var(--color-border-hover);
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
  }

  .cta-secondary:active {
    transform: translateY(-1px) scale(0.98);
  }

  /* Trust Indicators */
  .hero-trust {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
    align-items: center;
    padding-top: var(--spacing-12);
    border-top: 1px solid var(--color-stone-200);
    max-width: 48rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero-trust {
      flex-direction: row;
      justify-content: center;
      gap: var(--spacing-12);
    }
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    color: var(--color-text-secondary);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
  }

  .trust-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-text-secondary);
    flex-shrink: 0;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    color: #78716c;
    animation: bounce 2s ease-in-out infinite;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .scroll-indicator:hover {
    color: #44403c;
    transform: translateX(-50%) scale(1.2);
  }

  .scroll-indicator:active {
    transform: translateX(-50%) scale(0.9);
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-12px);
    }
  }

  /* Mobile Adjustments */
  @media (max-width: 639px) {
    .hero-section {
      min-height: 100svh; /* Use svh for better mobile support */
      padding: var(--spacing-6) var(--spacing-4);
    }

    .hero-badge {
      font-size: var(--font-size-xs);
      padding: var(--spacing-2) var(--spacing-4);
    }

    .hero-heading {
      margin-bottom: var(--spacing-6);
    }

    .hero-subheading {
      margin-bottom: var(--spacing-8);
    }

    .hero-cta-group {
      gap: var(--spacing-3);
      margin-bottom: var(--spacing-12);
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      max-width: 20rem;
      justify-content: center;
      font-size: var(--font-size-base);
      padding: var(--spacing-4) var(--spacing-6);
      /* Better touch targets */
      min-height: 48px;
    }

    .hero-trust {
      flex-direction: column;
      gap: var(--spacing-4);
      padding-top: var(--spacing-8);
    }

    .trust-item {
      font-size: var(--font-size-sm);
    }
  }

  /* Tablet optimization */
  @media (min-width: 640px) and (max-width: 1023px) {
    .hero-section {
      padding: var(--spacing-8) var(--spacing-6);
    }

    .cta-primary,
    .cta-secondary {
      padding: var(--spacing-4) var(--spacing-8);
    }
  }
</style>
