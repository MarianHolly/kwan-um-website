<style>
  .footer {
    background: #1c1917;
    color: #d6d3d1;
  }

  .footer-main {
    padding: 4rem 0 2rem;
    border-bottom: 1px solid #292524;
  }

  .footer-container {
    max-width: 75rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Grid Layout */
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
      gap: 4rem;
    }
  }

  /* Brand Column */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo-image {
    height: 2.5rem;
    width: auto;
  }

  .brand-name {
    font-size: 1.25rem;
    font-weight: 300;
    color: #fafaf9;
    letter-spacing: 0.05em;
  }

  .brand-tagline {
    font-size: 0.9375rem;
    color: #a8a29e;
    font-weight: 300;
    line-height: 1.6;
    max-width: 18rem;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: #292524;
    color: #d6d3d1;
    transition: all 0.3s ease;
  }

  .social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .social-link:hover {
    background: #44403c;
    color: #fafaf9;
    transform: translateY(-2px);
  }

  /* Footer Columns */
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .column-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #fafaf9;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: #a8a29e;
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 300;
  }

  .footer-links a:hover {
    color: #fafaf9;
  }

  .external-icon {
    width: 1rem;
    height: 1rem;
    opacity: 0.5;
  }

  /* Contact Info */
  .footer-contact {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-contact li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 0.9375rem;
    color: #a8a29e;
    font-weight: 300;
  }

  .contact-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #78716c;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .footer-contact a {
    color: #a8a29e;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-contact a:hover {
    color: #fafaf9;
  }

  /* Newsletter Mini */
  .footer-newsletter {
    margin-top: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid #292524;
  }

  .newsletter-label {
    font-size: 0.875rem;
    color: #78716c;
    margin-bottom: 0.5rem;
  }

  .newsletter-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #fafaf9;
    font-size: 0.9375rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .newsletter-link svg {
    width: 1rem;
    height: 1rem;
    transition: transform 0.3s ease;
  }

  .newsletter-link:hover {
    color: #e7e5e4;
  }

  .newsletter-link:hover svg {
    transform: translateX(4px);
  }

  /* Affiliation Banner */
  .affiliation-banner {
    background: linear-gradient(135deg, #292524 0%, #1c1917 100%);
    border: 1px solid #44403c;
    border-radius: 0.75rem;
    padding: 1.5rem 2rem;
  }

  .affiliation-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .affiliation-icon {
    width: 2rem;
    height: 2rem;
    color: #78716c;
    flex-shrink: 0;
  }

  .affiliation-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .affiliation-label {
    font-size: 0.75rem;
    color: #78716c;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .affiliation-org {
    font-size: 1rem;
    color: #fafaf9;
    font-weight: 400;
  }

  /* Bottom Bar */
  .footer-bottom {
    padding: 1.5rem 0;
  }

  .bottom-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    justify-content: space-between;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .bottom-content {
      flex-direction: row;
    }
  }

  .copyright {
    color: #78716c;
    font-weight: 300;
  }

  .bottom-links {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #78716c;
  }

  .bottom-links a {
    color: #a8a29e;
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 300;
  }

  .bottom-links a:hover {
    color: #fafaf9;
  }

  .separator {
    color: #44403c;
  }

  .language-switch {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .lang-active {
    color: #fafaf9;
    font-weight: 500;
  }

  .lang-inactive {
    color: #57534e;
    cursor: not-allowed;
    opacity: 0.5;
  }

  /* Mobile Adjustments */
  @media (max-width: 639px) {
    .footer-main {
      padding: 3rem 0 1.5rem;
    }

    .affiliation-banner {
      padding: 1.25rem 1.5rem;
    }

    .affiliation-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
